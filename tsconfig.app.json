{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "version.json"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
		"lib": ["es2021", "DOM"],
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "noImplicitAny": false
    }
}
